<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neusoft.bsp.bvo.mapper.ManufacturerMapper">

    <select id="getById" parameterType="java.lang.Integer" resultType="Manufacturer">
        select * from man_manufacturer where man_id = #{man_id}
    </select>

    <insert id="insert" parameterType="Manufacturer"  useGeneratedKeys="true" keyProperty="man_id">
        insert into man_manufacturer values(null,#{name_en},#{name_cn},#{gmc_report_type},#{gmc_report_url},#{description},#{created_by},#{creation_date},#{last_update_by},#{last_update_date},#{call_cnt},#{remark},#{sts_cd})
    </insert>

    <update id="updateUserWithLastManu" parameterType="java.lang.Integer">
        update sys_user set man_buyer_id = (select Max(man_id) from man_manufacturer) where user_id = #{user_id}
    </update>
</mapper>