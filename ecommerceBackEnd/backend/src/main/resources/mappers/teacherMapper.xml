<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neusoft.backend.Mapper.TeacherMapper">
    <select id="checkTeacher" parameterType="Teacher" resultType="Teacher">
        select * from teacher where t_id = #{t_id} and t_password = #{t_password}
    </select>

    <insert id="addTeacher" parameterType="Teacher">
        insert into teacher values(#{t_id},#{t_password},#{t_name},#{t_gender},#{t_duty},#{t_research},#{t_university}
            ,#{t_specialty})
    </insert>

    <update id="updateTeacher" parameterType="Teacher">
        update teacher set t_name = #{t_name},t_gender = #{t_gender},t_duty = #{t_duty},
         t_research= #{t_research} ,t_university = #{t_university} where t_id = #{t_id}
    </update>

    <delete id="deleteTeacher" parameterType="java.lang.String">
        delete from teacher where t_id = #{t_id}
    </delete>


